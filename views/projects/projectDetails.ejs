<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Justin's Portfolio</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('../navbar') %>
    <div class="details-body">
        <h3 class="details-title"> <%= projectDetails.name%> </h3>
        <p class="details-info">
            <span class="details-text"><%= projectDetails.text%></span>
        </p>
        <% if (projectDetails.url) { %>
            <a href="<%= projectDetails.url %>">Live Preview</a>
        <% } %>
        <div class="masonry">
            <% if (projectDetails.images) { %> 
                <% projectDetails.images.forEach(image => { %> 
                    <img src="<%- image %>" class="details-image">
                <% }); %> 
            <% } %>   
        </div>
        <%- include('../footer') %>
    </div>
</body>
</html>